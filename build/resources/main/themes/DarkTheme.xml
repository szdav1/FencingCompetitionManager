<?xml version="1.0" encoding="UTF-8"?>
<DarkTheme>
    <appearance applyTo="window">
        <background colors="[12,14,14,255]"/>
    </appearance>

    <appearance applyTo="sidebar">
        <background colors="[27,27,27,255]"/>
    </appearance>

    <appearance applyTo="sidebar.header">
        <background colors="[0,0,0,0]"/>
    </appearance>

    <appearance applyTo="sidebar.buttons.new">
        <background colors="[0,0,0,0][72,58,255,255][178,0,255,255]"/>
        <foreground colors="[128,128,128,255][255,255,255,255]"/>
        <icon1 source="/icons/newGray.png" width="15" height="15"/>
        <icon2 source="/icons/newWhite.png" width="15" height="15"/>
    </appearance>

    <appearance applyTo="sidebar.buttons.settings">
        <background colors="[0,0,0,0][72,58,255,255][178,0,255,255]"/>
        <foreground colors="[128,128,128,255][255,255,255,255]"/>
        <icon1 source="/icons/settingsGray.png" width="15" height="15"/>
        <icon2 source="/icons/settingsWhite.png" width="15" height="15"/>
    </appearance>

    <appearance applyTo="sidebar.buttons.new.dropdown">
        <background colors="[27,27,27,255]"/>
        <border colors="[72,58,255,255][178,0,255,255]" thickness="@proportional"/>
    </appearance>

    <appearance applyTo="sidebar.buttons.settings.dropdown">
        <background colors="[27,27,27,255]"/>
        <border colors="[72,58,255,255][178,0,255,255]" thickness="@proportional"/>
    </appearance>

    <appearance applyTo="sidebar.buttons.dropdown.buttons">
        <background colors="[0,0,0,0][72,58,255,255][178,0,255,255]"/>
        <foreground colors="[128,128,128,255][255,255,255,255]"/>
    </appearance>
</DarkTheme>