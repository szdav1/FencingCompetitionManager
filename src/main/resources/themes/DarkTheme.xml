<?xml version="1.0" encoding="UTF-8"?>
<DarkTheme>
    <!--  Window  -->
    <appearance applyTo="window">
        <background colors="[12,14,14,255]"/>
    </appearance>

    <!--  Sidebar  -->
    <appearance applyTo="sidebar">
        <background colors="[27,27,27,255]"/>
    </appearance>

    <!--  Header of the sidebar  -->
    <appearance applyTo="sidebar.header">
        <background colors="[0,0,0,0]"/>
        <icon1 source="/icons/dashboard.png" width="3" height="3"/>
    </appearance>

    <!--  Separators of the sidebar  -->
    <appearance applyTo="sidebar.separator">
        <background colors="[0,0,0,0][72,58,255,255][178,0,255,255][0,0,0,0][0,0,0,0]"/>
    </appearance>

    <!--  Poule button of the sidebar  -->
    <appearance applyTo="sidebar.buttons.poule">
        <background colors="[0,0,0,0][72,58,255,255][178,0,255,255]"/>
        <foreground colors="[128,128,128,255][255,255,255,255]"/>
        <icon1 source="/icons/pouleGray.png" width="3" height="3"/>
        <icon2 source="/icons/pouleWhite.png" width="3" height="3"/>
    </appearance>

    <appearance applyTo="sidebar.buttons.poule.dropdown">
        <background colors="[27,27,27,255]"/>
        <border colors="[72,58,255,255][178,0,255,255]" thickness="@proportional"/>
    </appearance>

    <appearance applyTo="sidebar.buttons.poule.dropdown.empty">
        <background colors="[0,0,0,0][72,58,255,255][178,0,255,255]"/>
        <foreground colors="[128,128,128,255][255,255,255,255]"/>
        <icon1 source="/icons/emptyGray.png" width="3" height="2"/>
        <icon2 source="/icons/emptyWhite.png" width="3" height="2"/>
    </appearance>

    <appearance applyTo="sidebar.buttons.poule.dropdown.database">
        <background colors="[0,0,0,0][72,58,255,255][178,0,255,255]"/>
        <foreground colors="[128,128,128,255][255,255,255,255]"/>
        <icon1 source="/icons/fromDatabaseGray.png" width="3" height="3"/>
        <icon2 source="/icons/fromDatabaseWhite.png" width="3" height="3"/>
    </appearance>

    <!--  Table button of the sidebar  -->
